dev <%= @dev %>
remote <%= @remote %>
<% if @float -%>
float
<% end -%>
# Local  : <%= @ipaddress_local %>
# Remote : <%= @ipaddress_remote %>
ifconfig <%= @ipaddress_local %> <%= @ipaddress_remote %>
<% if !@routes.empty? -%>
# Static routes
<% @routes.each do |route| -%>
route <%= route %>
<% end -%>
<% end -%>
secret <%= @secret %>
port <%= @port %>
<% if @keepalive -%>
keepalive <%= @keepalive_ping_interval %> <%= @keepalive_ping_timeout %>
<% end -%>

comp-lzo
user openvpn
group openvpn
persist-key
persist-tun
mute-replay-warnings
verb 3

